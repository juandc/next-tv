@import '../node_modules/nib/lib/nib/index.styl'

*
  box-sizing border-box
  transition all .1s linear

html
body
  background-color #fff
  margin 0
  padding 0
  overflow-x hidden
  min-height 100vh

body
  display flex
  flex-direction column
  flex-wrap wrap
  position relative
  height auto
  justify-content center

.container
  border-radius 2px
  display flex
  flex 1
  flex-direction column
  flex-wrap wrap
  justify-content flex-start
  margin 0 auto
  max-width 650px
  position relative
  height auto
  width 90%
  &.content
    margin-top 100px
  &:before
  &:after
    content ''
    display table

.ChargingContainer
  text-align center
  margin 0 auto
  &-span
  &-img
    font-family 'Dosis', Arial, "Helvetica Neue", Helvetica, sans-serif
    font-size 25px

.Menu
  background-color #D24D57
  box-shadow 1px 1px 4px 4px #555
  color #fff
  display flex
  align-items center
  justify-content center
  fixed top 0 left 0 right 0
  font-family 'Roboto Condensed', Arial, "Helvetica Neue", Helvetica, sans-serif
  font-size 16px
  height 60px
  text-align center
  width 100%
  z-index 90
  .container
    position relative
  &-icon
    absolute top 30px right 10px
    font-size 30px
    height 40px
    width 40px
    &--lang
      absolute top 30px left 10px
      cursor pointer
      &:active ~ .u-dropdown
        display block
        opacity 1

.Movies
  display flex
  flex-wrap wrap
  list-style none
  margin 0 auto
  padding 0
  padding-top 280px
  position relative
  // width 90%

.Movie
  position relative
  margin 10px 12px
  width calc(50% - 24px)
  width -webkit-calc(50% - 24px)
  width -moz-calc(50% - 24px)
  transition all .3s linear
  &:only-child
    margin 0
    width calc(80% - 24px)
    width -webkit-calc(80% - 24px)
    width -moz-calc(80% - 24px)
    max-width 100%
    .Movie-avatar
      img
        position relative !important
  .Movie-avatar
    margin 0
    padding 0
    width 100%
    img
      border-radius 2px
      position initial
      top 0
      left 0
      width 100%
      z-index 1
      &:hover
        position absolute
        top -15px
        left -15px
        width 120%
        z-index 2

.SearchForm
  position absolute
  font-family 'Open Sans', Arial, "Helvetica Neue", Helvetica, sans-serif
  font-size 14px
  font-weight: 700;
  margin 0 auto
  top 90px
  left 10px
  right 10px
  width 90%
  &--charging
    position relative
    order -1
    margin-bottom 100px
  label
    font-size: 12px;
    color: #979995;
    text-transform: uppercase;
    letter-spacing: 1px;
  input
    border 1px solid #ccc
    border-radius 2px
    color #444
    height 38px
    font-family 'Open Sans', Arial, "Helvetica Neue", Helvetica, sans-serif
    font-weight bold
    line-height 1.4
    padding 6px 14px
    width 100%

.SearchBox
  background #22A7F0
  border-radius 2px
  color #fff
  display flex
  align-items center
  font-family 'Open Sans'
  font-size 20px
  height 70px
  left 10%
  padding 0 10px
  position absolute
  top 180px
  width 80%

.searchWord
  font-family 'Dosis', Arial, "Helvetica Neue", Helvetica, sans-serif
  text-decoration underline
  padding-left 5px

.u-dropdown
  absolute top 2px left 10px
  color #FFF
  font-weight bold
  .Dropdown
    background-color #EC644B
    height 60px
    position relative
    padding 0
    list-style none
    li
      cursor pointer
      text-align center
      height 50%
      padding 7px 10px
      width 100%
      vertical-align middle
      &:hover
        background-color #FFF
        color #EC644B

.u-movieModal
  display none
  &.hidden
    display none
    opacity 0
  &.view
    background-color rgba(#ccc, .6)
    display block
    fixed top 0 bottom 0 left 0 right 0
    width 100%
    opacity 1
    z-index 100
    .container
      background-color #fff
      position relative !important
      min-height 100vh

.Movie-body
  overflow-y scroll

.Movie-img
  min-height 300px
  max-height 300px
  margin 0 auto
  min-width 100%
  width auto

@media screen and (min-width: 425px) and (max-width: 767px)
  .Movie
    margin 10px auto
    margin-left 9%
    max-width 170px
    width 40%
    &:only-child
      max-width 100%
      padding 0
    &:nth-child(2n+2)
      margin-left auto
      margin-right 9%

@media screen and (min-width: 624px) and (max-width: 767px)
  .Movie
    margin-left 12%
    &:only-child
      max-width 100%
      padding 0
    &:nth-child(2n-2)
      margin-right 12%

@media screen and (min-width: 768px) and (max-width: 1023px)
  .Movie
    margin 10px auto
    width 30%
    max-width 150px
    &:only-child
      max-width 100%
      padding 0
    &:nth-child(3n+1)
      margin-left 5%
    &:nth-child(3n+2)
      margin 10px 0
    &:nth-child(3n+3)
      margin-right 5%

@media screen and (min-width: 1024px)
  .container
    max-width 900px
  .Movie
    margin 15px auto
    max-width 150px
    width 20%
    &:only-child
      max-width 100%
      padding 0
    &:nth-child(4n+1)
      margin-left 10%
    &:nth-child(4n+4)
      margin-right 10%
    &:last-child:not(:nth-child(4n+4))
      margin-right 10%
